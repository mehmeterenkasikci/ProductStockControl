@model MvcStok.Models.Entity.SATISLAR
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<head>
    <style>
        .btn {
            position: relative;
            font-size: 15px;
            /*text-transform: uppercase;*/
            text-decoration: none;
            padding: 1em 2.5em;
            display: inline-block;
            border-radius: 6em;
            transition: all .2s;
            border: none;
            font-family: inherit;
            font-weight: 500;
            color: white;
            background-color: black;
        }

            .btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

            .btn:active {
                transform: translateY(-1px);
                box-shadow: 0 0px 0px rgba(0, 0, 0, 0);
            }

            .btn::after {
                content: "";
                display: inline-table;
                height: 50%;
                width: 50%;
                border-radius: 100px;
                position: absolute;
                top: 0;
                left: 0;
                z-index: -1;
                transition: all .4s;
            }

            .btn::after {
                /*background-color: #fff;*/
            }

            .btn:hover::after {
                transform: scaleX(1.4) scaleY(1.6);
                /*opacity: 0;*/
            }
    </style>
</head>

@*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Satış Yap
</button>*@
<div @*class="modal" id="Modal1"*@>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title"> Satış Ekranı </h2>
            </div>
            <form method="post" action="/Satis/YeniSatis">
                <div class="modal-body">
                    <label>Ürün Adı</label>
                    @Html.TextBoxFor(m => m.Urun, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Urun, "", new { @style = "color:red" })
                    <br />
                    <label>Müşteri Adı Soyadı</label>
                    @Html.TextBoxFor(m => m.Musteri, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.Musteri, "", new { @style = "color:red" })
                    <br />
                    <label>Adet</label>
                    @Html.TextBoxFor(m => m.Adet, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Adet, "", new { @style = "color:red" })
                    <br />
                    <label>Fiyat</label>
                    @Html.TextBoxFor(m => m.Fiyat, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Fiyat, "", new { @style = "color:red" })
                    <br />
                    <button type="submit" class="btn btn-info"> Satışı Yap </button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">
                        Vazgeç
                    </button>

                </div>
            </form>
        </div>
    </div>
</div>

