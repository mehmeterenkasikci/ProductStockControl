@model MvcStok.Models.Entity.URUNLER
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="Urun_AD" />

    </div>
    <div>
        <label>Marka</label>
        <input type="text" class="form-control" name="MARKA" />

    </div>
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m=>m.KATEGORILER.Kategori_ID,(List<SelectListItem>)ViewBag.dgr, new {@class="form-control" }) 

    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="FIYAT" />

    </div>
    <div>
        <label>Stok Durumu</label>
        <input type="text" class="form-control" name="STOK" />

    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>

