@using MvcStok.Models.Entity;
@model List<MUSTERILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Müşteri Id</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    <tbody>
        @foreach (var mus in Model)
        {
        <tr>
            <td>@mus.Musteri_ID</td>
            <td>@mus.Musteri_AD</td>
            <td>@mus.Musteri_SOYAD</td>
            <td><a href="/Musteri/Sil/@mus.Musteri_ID" class="btn btn-danger">Sil</a></td>
            <td>
                <a href="/Musteri/MusteriGetir/@mus.Musteri_ID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri Ekle</a>
